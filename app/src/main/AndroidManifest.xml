<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eric.tutorversity">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.StudentDashboard"
            android:label="@string/title_activity_student_dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".models.AddQuestion"
            android:parentActivityName=".activities.StudentDashboard" />
        <activity android:name=".activities.MyQuestions" />
        <activity android:name=".models.NearbyTutors" />
        <activity android:name=".models.Messages" />
        <activity android:name=".activities.Settings"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>