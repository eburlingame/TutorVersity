<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/questionTitleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/subjectLabel"
                android:layout_marginLeft="31dp"
                android:layout_marginStart="31dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Question Title"
                android:textStyle="bold" />

            <EditText
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/questionBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button2"
                android:layout_alignLeft="@+id/questionTitleLabel"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/questionTitleLabel"
                android:layout_below="@+id/questionTitleLabel"
                android:ems="10"
                android:inputType="textMultiLine"
                android:text="Question Body" />

            <EditText
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/timeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/subjectLabel"
                android:layout_alignBottom="@+id/subjectLabel"
                android:layout_toEndOf="@+id/subjectLabel"
                android:layout_toRightOf="@+id/subjectLabel"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="12:34 PM"
                android:textSize="12sp" />

            <EditText
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/subjectLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/button2"
                android:layout_alignLeft="@+id/questionTitleLabel"
                android:layout_alignRight="@+id/button2"
                android:layout_alignStart="@+id/questionTitleLabel"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Subject"
                android:textSize="14sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="View Question"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

</LinearLayout>