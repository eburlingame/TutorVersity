<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <ImageView
        android:id="@+id/leftIco"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:src="@mipmap/ic_launcher_round"
        android:contentDescription="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/desc"
        android:scrollHorizontally="true"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_alignLeft="@+id/heading"
        android:layout_alignStart="@+id/heading"
        android:layout_below="@+id/heading" />

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollHorizontally="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:text="Large Text"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/leftIco"
        android:layout_toEndOf="@+id/leftIco" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_delete"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_alignTop="@+id/reply"
        android:layout_toRightOf="@+id/reply"
        android:layout_alignBottom="@+id/reply"
        android:contentDescription=""
        tools:ignore="RtlHardcoded" />

    <ImageView
        android:id="@+id/reply"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@mipmap/ic_reply"
        android:layout_below="@+id/leftIco"
        android:layout_alignLeft="@+id/desc"
        android:layout_alignStart="@+id/desc" />

</RelativeLayout>